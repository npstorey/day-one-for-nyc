source "https://rubygems.org"

# Core site generator
gem "jekyll", "~> 4.3"

# Sass pipeline powered by Dart-Sass via sass-embedded
gem "jekyll-sass-converter", "~> 3.0"
gem "sass-embedded", "~> 1.77"

# Plugins
gem "jekyll-remote-theme"
gem "jekyll-include-cache"

# Other runtime dependencies
gem "csv"
gem "bigdecimal"
gem "nokogiri", "~> 1.16.7"

# Local development convenience (Ruby >= 3.0)
group :development do
  gem "webrick", "~> 1.8"
end

